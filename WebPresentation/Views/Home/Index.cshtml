@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron content text-center">
    <a href="https://www.yugioh-card.com/en/" target="_blank"><img src="~/images/YGO_Logo.gif" /></a>
    
</div>

<div class="row">
    <div class="col-md-5 conent">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <iframe width="560" height="315" src="https://www.youtube.com/embed/IxA6_AzCGG4"
                            title="YouTube video player" frameborder="0" allow="accelerometer; autoplay;
            clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>

                <div class="item">
                    <iframe width="560" height="315" src="https://www.youtube.com/embed/afTsDyrXACg"
                            title="YouTube video player" frameborder="0" allow="accelerometer; autoplay;
                        clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>

                <div class="item">
                    <iframe width="560" height="315" src="https://www.youtube.com/embed/hKrEcJpcQ1c"
                            title="YouTube video player" frameborder="0" allow="accelerometer; autoplay;
                        clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="col-md-3 content panel-body" style="height: 100%;">
        <h2><a href="https://yugipedia.com/wiki/" target="_blank">Yugipedia</a></h2>
        <br />
        <p>The Yugipedia Wiki contains everything you need to know about the game, the cards, the show, and the community!</p>
        <br />
        <p><a class="btn btn-default" href="https://yugipedia.com/wiki/Special:Random" target="_blank">Random Article &raquo;</a></p>
    </div>

    <div class="col-md-3 content panel-body" >
        <h2><a href="https://www.tcgplayer.com/" target="_blank">TCG Player</a></h2>
        <br />
        <p>TCG Player is a great place to buy Yu-Gi-Oh products like cards, sleeves, deck boxes, mats, and more.          </p>
        <br />
        <p><a class="btn btn-default" href="https://www.tcgplayer.com/search/yugioh/product?productLineName=yugioh&page=1" target="_blank">Yu-Gi-Oh Products &raquo;</a></p>
    </div>
</div>